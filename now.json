{
  "version": 2,
  "builds": [{ "src": "api/**/*.js", "use": "@now/node" }],
  "env": {
    "AWS_DB_KEY": "@ripeworks-aws-key",
    "AWS_DB_SECRET": "@ripeworks-aws-secret"
  },
  "routes": [
    {
      "src": "/api/projects",
      "methods": ["GET"],
      "dest": "/api/projects/list.js"
    },
    {
      "src": "/api/projects",
      "methods": ["POST", "PUT"],
      "dest": "/api/projects/create"
    },
    {
      "src": "/api/projects/:project/events",
      "methods": ["GET"],
      "dest": "/api/events/list"
    },
    {
      "src": "/api/:project/store",
      "methods": ["POST"],
      "dest": "/api/events/create"
    }
  ]
}
